{
	
	"[lua]": {
		"editor.defaultFormatter": "JohnnyMorganz.stylua",
		"editor.insertSpaces": false,
	},
	"[luau]": {
		"editor.defaultFormatter": "JohnnyMorganz.stylua",
		"editor.insertSpaces": false,
	},
	"[yaml]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"editor.autoIndent": "advanced",
		"diffEditor.ignoreTrimWhitespace": false,
		"editor.defaultColorDecorators": "never",
		"editor.quickSuggestions": {
			"strings": "on"
		}
	},
	"cSpell.enabled": true,
	"cSpell.words": [
		"__newindex",
		"aftman",
		"CalcZIndexs",
		"cooldown",
		"dialoglib",
		"getmetatable",
		"giflib",
		"maxn",
		"nonstrict",
		"pcall",
		"rbxassetid",
		"rbxl",
		"Resampler",
		"Roblox",
		"rojo",
		"setmetatable",
		"shee",
		"stdlib",
		"testlib",
		"Thumbstick",
		"tostring"
	],
	"cSpell.ignorePaths": [
		"vscode-extension",
		".git/objects",
		".vscode", // ignore vscode workspace settings
		".vscode-insiders",
		"*.toml" // ignore toml files
	],
	"luau-lsp.sourcemap.rojoProjectFile": "defaultTests.project.json",
	"luau-lsp.platform.type": "roblox",
	"luau-lsp.sourcemap.generatorCommand": "make sourcemap.json -j$(nproc)",
	"makefile.configureOnOpen": false,
	"luau-lsp.sourcemap.useVSCodeWatcher": true,
	"stylua.targetReleaseVersion": "latest",
}
